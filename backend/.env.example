# TaskFlow Backend Environment Variables
# Copy this file to .env for local development

# Environment
ENVIRONMENT=development

# Database Configuration
# For local development with SQLite (default):
# DATABASE_URL=sqlite:///./taskflow.db

# For local development with PostgreSQL:
# DATABASE_URL=postgresql://taskflow:dev_password@localhost:5432/taskflow_dev

# For Render production (automatically provided by Render):
# DATABASE_URL=<render-provides-this>

# CORS Origins (comma-separated)
# Development:
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Production (set in Render):
# CORS_ORIGINS=https://taskflow-frontend-XXXX.onrender.com

# Debug Mode
DEBUG=true

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
